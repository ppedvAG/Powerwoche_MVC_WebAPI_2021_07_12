<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASPNETCOREMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
            <!-- Brand -->
            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>

            <!-- Links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Movie" asp-action="Index">Movie</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="ShoppingPayment" asp-action="ShoppingCartOverview">Warenkorb Übersicht</a>
                </li>


                <!-- Dropdown -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                        Demo-Beispiele
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" asp-controller="Demo" asp-action="Sample1">Sample1</a>
                        <a class="dropdown-item" asp-controller="Demo" asp-action="Sample2">Sample2</a>
                        <a class="dropdown-item" asp-controller="Demo" asp-action="Sample3">Sample3</a>
                    </div>
                </li>
            </ul>
            <partial name="_LoginPartial" />
            <vc:cultur-switcher />
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody() <!-- Hoier werden die Views aufgelöst-->
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - ASPNETCOREMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
